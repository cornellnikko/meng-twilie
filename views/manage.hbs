    $(document).ready( function () {
      console.log("1");
      $("#editTwilie").submit(function(e) {
        e.preventDefault();
        // TODO ajax request, reload page on success
        console.log("1");
        editTwilie();
      });
      $("#active").val(parseInt("{{active}}"));
    });
    
